@model IEnumerable<RoleViewModel>
@{
    ViewData["Title"] = "All Roles";
}

<h1>All Roles</h1>
<br />
<br />


<a asp-action="Create" class="btn btn-primary  "> Create New Role </a>

<div class="row justify-content-center align-items-center my-3">
    <form class="row col-8 offset-1" asp-action="Index" id="searchForm">
        <div class="col-8">
            <input type="text" class="form-control" name="name" placeholder="Search By Name" /> 
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </form>


</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover text-center">
        <thead class="font-weight-bolder ">
            <tr>
                <td>@Html.DisplayNameFor(R=>R.Id)</td>
                <td>@Html.DisplayNameFor(R=>R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {
                <tr>
                     <td>@role.Id</td>
                     <td>@role.RoleName</td>
                 
                  
               

                    <td>
                        <a asp-controller="Role" asp-action="Details" asp-route-id="@role.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details</a>
                    </td>
                    <td>
                        <a asp-controller="Role" asp-action="Edit" asp-route-id="@role.Id" class="btn btn-success"><i class="fas fa-edit"></i> Update</a>
                    </td>
                    <td>
                        <a asp-controller="Role" asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                    </td>
               

                 

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-2">
        <h3>There isn't any roles !!!!!!!!</h3>
    </div>
}
