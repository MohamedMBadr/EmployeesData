@model IEnumerable<UserViewModel>
@{
    ViewData["Title"] = "All Users";
}

<h1>All Users</h1>
<br />
<br />


<div class="row justify-content-center align-items-center mt-5">
    <form class="row col-8 offset-1" asp-action="Index" id="searchForm">
        <div class="col-8">
            <input type="text" class="form-control" name="SearchEmail" placeholder="Search By Name" /> 
        </div>
        <div class="col-4">
            <input type="submit" class="btn btn-success" value="Search" />
        </div>

    </form>


</div>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover text-center">
        <thead class="font-weight-bolder ">
            <tr>
                <td>@Html.DisplayNameFor(u=>u.Id)</td>
                <td>@Html.DisplayNameFor(u=>u.FName)</td>
                <td>@Html.DisplayNameFor(u=>u.LName)</td>
                <td>@Html.DisplayNameFor(u=>u.Email)</td>
                <td>@Html.DisplayNameFor(u=>u.PhoneNumber)</td>

                <td>@Html.DisplayNameFor(u=>u.Roles)</td>
                



                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(m=>user.Id)</td>
                    <td>@Html.DisplayFor(m=>user.FName)</td>
                    <td>@Html.DisplayFor(m=>user.LName)</td>
                    <td>@Html.DisplayFor(m=>user.Email)</td>
                    <td>@Html.DisplayFor(m=>user.PhoneNumber)</td>
                    <td>@string.Join(" ", user.Roles)</td>

   <td>
                        <a asp-controller="User" asp-action="Details" asp-route-id="@user.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details</a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Edit" asp-route-id="@user.Id" class="btn btn-success"><i class="fas fa-edit"></i> Update</a>
                    </td>
                    <td>
                        <a asp-controller="User" asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                    </td>
               

                 

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-2">
        <h3>There isn't any users !!!!!!!!</h3>
    </div>
}
