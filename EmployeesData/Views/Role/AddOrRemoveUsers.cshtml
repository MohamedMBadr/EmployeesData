@model List<UserInRoleVM>
@{
    ViewData["Title"] = "AddOrRemoveUsers";
    var RoleId = ViewBag.RoleId;
}


<h1>Add Or Remove Users</h1>
<br />
<br />


<form asp-action="AddOrRemoveUsers" asp-route-RoleId="@RoleId">
    @for (var i = 0; i < Model.Count; i++)
    {
        <div class="form-group">

            <input asp-for="@Model[i].IsSelect"/>
            <label asp-for="@Model[i].IsSelect"> @Model[i].UserName</label>
        </div>
        <input asp-for="@Model[i].UserId" type="hidden" />
        <input asp-for="@Model[i].UserName" type="hidden"/>
        
    }

    <input type="submit" value="Edit" class="btn btn-primary" />
    <a asp-action="Index" class="btn btn-light">  Back to list</a>
</form>

