@using Demo.DAL.Models
@model IEnumerable<Employee>
@{
    ViewData["Title"] = "All Employees";
}
<h1>All Employees</h1>
<br />
<br />

<a asp-action="Create" class="btn btn-primary my-3 "> Create New Employee </a>
@if (Model.Count() > 0)
{
    <table class="table table-striped table-hover text-center">
        <thead class="font-weight-bolder ">
            <tr>
                <td>@Html.DisplayNameFor(e=>e.Name)</td>
                <td>@Html.DisplayNameFor(e=>e.NationalId)</td>
                <td>@Html.DisplayNameFor(e=>e.BirthBade)</td>
                <td>@Html.DisplayNameFor(e=>e.Age)</td>

                <td>@Html.DisplayNameFor(e=>e.Account)</td>
                <td>@Html.DisplayNameFor(e=>e.LineOfBusiness)</td>
                <td>@Html.DisplayNameFor(e=>e.Language)</td>
                <td>@Html.DisplayNameFor(e=>e.Languagelevel)</td>

                
             
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>


            </tr>
        </thead>
        <tbody>
            @foreach (var Employee in Model)
            {
                <tr>
                    <td>@Employee.Name</td>
                    <td>@Employee.NationalId</td>
                    <td>@Employee.BirthBade</td>
                    <td>@Employee.Age</td>
                    <td>@Employee.Account</td>
                    <td>@Employee.LineOfBusiness</td>
                    <td>@Employee.Language</td>
                    <td>@Employee.Languagelevel</td>

                    <td>
                        <a asp-controller="Employee" asp-action="Details" asp-route-id="@Employee.Id" class="btn btn-warning"><i class="fas fa-eye"></i> Details</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Edit" asp-route-id="@Employee.Id" class="btn btn-success"><i class="fas fa-edit"></i> Update</a>
                    </td>
                    <td>
                        <a asp-controller="Employee" asp-action="Delete" asp-route-id="@Employee.Id" class="btn btn-danger"><i class="fas fa-trash"></i> Delete</a>
                    </td>

                </tr>
            }

        </tbody>
    </table>
}
else
{
    <div class="alert alert-warning mt-2">
        <h3>There isn't any employess !!!!!!!!</h3>
    </div>
}

